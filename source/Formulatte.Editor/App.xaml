<Application x:Class="Formulatte.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml"           
             ShutdownMode="OnMainWindowClose"
             >
    <Application.Resources>         
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Formulatte.Engine;component/Themes/MainDictionary.xaml"/>
                <ResourceDictionary Source="/Formulatte.Engine;component/Themes/ThemeDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
    	</ResourceDictionary>         
    </Application.Resources>
</Application>
